<%= simple_form_for(@dog) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :dob %>
    <%= f.input :checked_in %>
    <%= f.association :breed %>
    <%= f.association :owner %>
    <%= f.association :vet, collection: Vet.order(:doctor), label_method: :doctor %>
    <%= f.input :info %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
